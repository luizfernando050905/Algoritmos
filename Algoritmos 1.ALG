Algoritmo "media"

Var
// Seção de Declarações das variáveis 
    a,b: inteiro
    n: real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
     escreval("informe dois numeros inteiros: ")
     leia(a, b)
     
     n <- (a+b)/2
     
     escreval("A media de ",a," e ",b," é igual a ",n,".")

Fimalgoritmo